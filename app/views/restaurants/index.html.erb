<div class="container">

  <h1> All Restaurants</h1>

  <div class="list-group">
    <% @restaurants.each do |r| %>
      <div class="list-group-item">
        <%= link_to restaurant_path(r) do %>
        <h6><%= r.name %></h6>
        <p><%= r.address %></p>
        <% end %>
      </div>
    <% end %>
  </div>

<p> <%= link_to "add new restaurant", new_restaurant_path %></p>

</div>
