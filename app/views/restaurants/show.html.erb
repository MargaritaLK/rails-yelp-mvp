<div class="container">

  <h2> <%= @restaurant.name %> </h2>
  <p> <%= @restaurant.address %> </p>
  <h4> <%= @restaurant.category %> </h4>

  <h3>reviews</h3>

  <div class="form">
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "add a review", class: "btn btn-primary"%>
    <% end %>
  </div>

  <div class="list-group">
      <% @restaurant.reviews.each do |rev| %>
        <div class="list-group-item">
          <p><%= rev.content %></p>
          <%  rev.rating.times do %>
            <i class="fas fa-star"> </i>
          <% end %>

        </div>
      <% end %>
  </div>

  <p> <%= link_to "back to restaurant list", restaurants_path %></p>
</div>
